<Page x:Class="cursova.TouristPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cursova"
      mc:Ignorable="d" 
      d:DesignHeight="395" d:DesignWidth="850"
      Title="TouristPage">

    <Grid Background="#FFFAD0BE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="FilterColumn" Width="3*"/>
            <ColumnDefinition x:Name="SecondColumn" Width="9*"/>
            <ColumnDefinition x:Name="LastColumn" Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="289*"/>
            <RowDefinition Height="54*"/>
        </Grid.RowDefinitions>
        <DataGrid
        x:Name="TouristsDataGrid"
        AutoGenerateColumns="False"
        HeadersVisibility="Column"
        CanUserAddRows="False"
        CanUserDeleteRows="False"
        CanUserReorderColumns="True"
        CanUserResizeColumns="True"
        CanUserSortColumns="True"
        Background="#FFEEAFA0"
        Foreground="#FF3C3335"
        FontFamily="Sitka Display Semibold"
        FontSize="16"
        RowBackground="#FFFFF5F1"
        AlternatingRowBackground="#FFFFE4DE"
        GridLinesVisibility="Horizontal"
        BorderBrush="{x:Null}" Margin="196,50,65,54" Grid.RowSpan="3" Grid.ColumnSpan="4">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FFDD8C7A"/>
                    <Setter Property="Foreground" Value="#FF3C3335"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FFCC5C52"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FF3C3335"/>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Ім'я" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Телефону" Binding="{Binding Number}" Width="100"/>
                <DataGridTextColumn Header="Ел. Пошта" Binding="{Binding Type}" Width="160"/>
                <DataGridTextColumn Header="Дата народження" Binding="{Binding Date}" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Style="{StaticResource darkbutton}"
            Content="Додати" x:Name="addbtn"
            HorizontalAlignment="Left"
            Grid.Row="2"
            Width="109"
            FontSize="18"
            FontFamily="Sitka Display"
            Background="#FF63291B"
            Foreground="#FFFAD0BE" 
            Grid.Column="1" 
            Margin="470,12,0,10" 
            Click="addbtn_Click" Grid.ColumnSpan="2">
            <Button.BorderBrush>
                <SolidColorBrush Color="Transparent"/>
            </Button.BorderBrush>
        </Button>
        <Button Style="{StaticResource darkbutton}"
            Content="Редагувати" x:Name="edittouristbtn"
            HorizontalAlignment="Left"
            Grid.Row="2"
            VerticalAlignment="Top"
            Width="109"
            Height="32"
            FontSize="18"
            FontFamily="Sitka Display"
            Background="#FF63291B"
            Foreground="#FFFAD0BE" Margin="308,12,0,0" BorderBrush="Transparent" Grid.Column="1" Click="edittouristbtn_Click"/>
        <TextBox x:Name="findbox" Grid.Column="1" HorizontalAlignment="Left" Margin="243,0,0,0" Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="  |  Пошук за ім'ям ..." VerticalAlignment="Center" Width="300" FontSize="16" Background="#FFFFE4DE" FontFamily="Sitka Display" SelectionBrush="#FFFCAF9E" Height="30" >
            <TextBox.BorderBrush>
                <SolidColorBrush Color="#FFABADB3" Opacity="0"/>
            </TextBox.BorderBrush>
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF63291B" Opacity="0.75"/>
            </TextBox.Foreground>
        </TextBox>
        <Button 
        Style="{StaticResource buttonmenu}"
        x:Name="finder" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Click="finderinbox_Click" Height="19" RenderTransformOrigin="0.5,0.5" Width="19" Grid.ColumnSpan="2" Margin="550,0,0,0">
            <Button.Background>
                <ImageBrush ImageSource="/finder.png"/>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180.703"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <Button 
        Style="{StaticResource buttonmenu}"
        x:Name="cross" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Click="deletetext_Click" Height="19" RenderTransformOrigin="0.5,0.5" Width="19" Grid.ColumnSpan="2" Margin="584,0,0,0">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/cross.png"/>
            </Button.Background>
        </Button>
        <StackPanel Grid.RowSpan="3" Margin="0,0,0,54">
            <!-- Постоянність -->
            <Label Content="Постоянність" Margin="15,5,5,5" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16"/>
            <CheckBox Content="Всі" x:Name="CheckAll" Checked="CheckAll_Checked" Unchecked="CheckAll_Unchecked" Margin="15 5 5 5"/>
            <CheckBox Content="Нові" x:Name="Option1" Margin="25 5 5 5" IsEnabled="True"  Unchecked="Option_Unchecked" Checked="Option_Checked"/>
            <CheckBox Content="Постійні" x:Name="Option2" Margin="25 5 5 5" IsEnabled="True"  Unchecked="Option_Unchecked" Checked="Option_Checked"/>
            <Label Content="Номер телефону" Margin="15,5,5,5" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBox x:Name="PhoneNum" Height="30" Width="115" FontSize="16" Background="#FFFFE4DE" FontFamily="Sitka Display" SelectionBrush="#FFFCAF9E">
                    <TextBox.BorderBrush>
                        <SolidColorBrush Color="Transparent"/>
                    </TextBox.BorderBrush>
                    <TextBox.Foreground>
                        <SolidColorBrush Color="#FF63291B"/>
                    </TextBox.Foreground>
                </TextBox>
                <Button 
                    Style="{StaticResource buttonmenu}"
                    x:Name="cross1"
                    Click="deletephone_Click"
                    Height="19" Width="19" Margin="5,5,0,0"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    ToolTip="Очистити">
                    <Button.Background>
                        <ImageBrush ImageSource="/cross.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
            <Button Style="{StaticResource darkbutton}"
            Content="ОК" x:Name="Okbtn"
            HorizontalAlignment="Center"
            Grid.Row="1"
            Width="80"
            Height="32"
            FontSize="18"
            Margin="0,10,0,0"
            FontFamily="Sitka Display"
            Background="#FF63291B"
            Foreground="#FFFAD0BE" BorderBrush="Transparent" Click="Okbtn_Click"/>
        </StackPanel>
        <Button Style="{StaticResource darkbutton}"
            Content="Історія" x:Name="historytbtn"
            HorizontalAlignment="Left"
            Grid.Row="2"
            VerticalAlignment="Top"
            Width="109"
            Height="32"
            FontSize="18"
            FontFamily="Sitka Display"
            Background="#FF63291B"
            Foreground="#FFFAD0BE" Margin="149,12,0,0" BorderBrush="Transparent" Grid.Column="1" Click="historytbtn_Click"/>

    </Grid>
</Page>
