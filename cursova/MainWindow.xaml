<Window x:Class="cursova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Головна сторінка" Icon="/resources/main.ico" Height="550" Width="850" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid Background="#FFFAD0BE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="FilterColumn" Width="3*"/>
            <ColumnDefinition x:Name="SecondColumn" Width="9*"/>
            <ColumnDefinition x:Name="LastColumn" Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="280*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Rectangle HorizontalAlignment="left" Height="87" VerticalAlignment="Center" Width="850" Fill="#FFA1402F" Grid.Column="0" Grid.ColumnSpan="3"/>
        <Label Content="Туристичне бюро" Margin="36,0,0,0" VerticalAlignment="Center" Foreground="#FFF8DEA6" FontSize="36" FontFamily="Sitka Heading" RenderTransformOrigin="-0.504,0.474" Grid.ColumnSpan="2" Height="55"/>
        <Image Grid.Column="2" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="28" Margin="10,34,0,0"
       Source="/person.png" />
        <DataGrid Grid.Column="1"
            Grid.Row="2"
            Grid.RowSpan="2"
            x:Name="ToursDataGrid"
            AutoGenerateColumns="False"
            HeadersVisibility="Column"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            Background="#FFEEAFA0"
            Foreground="#FF3C3335"
            FontFamily="Sitka Display Semibold"
            FontSize="16"
            Margin="0,50,0,0"
            RowBackground="#FFFFF5F1"
            AlternatingRowBackground="#FFFFE4DE"
            GridLinesVisibility="Horizontal"
            BorderBrush="{x:Null}">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FFDD8C7A"/>
                    <Setter Property="Foreground" Value="#FF3C3335"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FFCC5C52"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FF3C3335"/>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Назва" Binding="{Binding VoucherName}" Width="Auto"/>
                <DataGridTextColumn Header="Країна" Binding="{Binding Country}" Width="120"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding TourType}" Width="110"/>
                <DataGridTextColumn Header="Дні" Binding="{Binding Duration}" Width="50"/>
                <DataGridTextColumn Header="Ціна" Binding="{Binding Price}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="findbox" Grid.Column="1" HorizontalAlignment="Left" Margin="243,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="  |  Пошук за назвою ..." VerticalAlignment="Center" Width="300" FontSize="16" Background="#FFFFE4DE" FontFamily="Sitka Display" SelectionBrush="#FFFCAF9E" Height="30" >
            <TextBox.BorderBrush>
                <SolidColorBrush Color="#FFABADB3" Opacity="0"/>
            </TextBox.BorderBrush>
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF63291B" Opacity="0.75"/>
            </TextBox.Foreground>
        </TextBox>
        <Button 
        Style="{StaticResource buttonmenu}"
        x:Name="finder" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Click="finderinbox_Click" Height="19" RenderTransformOrigin="0.5,0.5" Width="19" Grid.ColumnSpan="2" Margin="550,0,0,0">
            <Button.Background>
                <ImageBrush ImageSource="/finder.png"/>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180.703"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <Button 
        Style="{StaticResource buttonmenu}"
        x:Name="cross" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Click="deletetext_Click" Height="19" RenderTransformOrigin="0.5,0.5" Width="19" Grid.ColumnSpan="2" Margin="584,0,0,0">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/cross.png"/>
            </Button.Background>
        </Button>
        <Grid Grid.Column="1" HorizontalAlignment="Center" Width="600" x:Name="gridmenu" Margin="0,87,0,0" Grid.RowSpan="2">
            <Canvas >

                <Button Content="Туристи"
                Style="{StaticResource buttonmenu}"
                x:Name="turistsbtn"
                Canvas.Left="65"
                Canvas.Top="16"
                Width="64" Height="25" Click="turistsbtn_Click" HorizontalAlignment="Left" VerticalAlignment="Center" />

                <Button Content="Всі бронювання"
                Style="{StaticResource buttonmenu}"
                x:Name="allbtn"
                Canvas.Left="238"
                Canvas.Top="16"
                Width="124" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Click="allbtn_Click"/>

                <Button Content="Путівки" 
                Style="{StaticResource buttonmenu}"
                x:Name="vaucherbtn"
                Canvas.Left="511"
                Canvas.Top="16"
                Width="66" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Click="vaucherbtn_Click"/>
            </Canvas>
        </Grid>
        <Button Grid.Column="1"
        Content="Вхід"
        x:Name="insidebtn"
        Style="{StaticResource enterbutton}"
        HorizontalAlignment="right"
        VerticalAlignment="Top"
        Width="auto"
        Height="32"
        Click="Enter_click" Margin="0,31,5,0" IsEnabled="True"/>
        <Button Style="{StaticResource darkbutton}" Panel.ZIndex="1"
        Content="Перегляд"
        x:Name="infobtn"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Width="110"
        Height="32"
        FontSize="18"
        FontFamily="Sitka Display"
        Background="#FF63291B"
        Foreground="#FFFAD0BE"
        Grid.Row="4"
        Grid.Column="1"
        Margin="444,0,0,0" Click="Info_click">
            <Button.BorderBrush>
                <SolidColorBrush Color="Transparent"/>
            </Button.BorderBrush>
        </Button>


        <ScrollViewer x:Name="FilterCheckboxes"
              VerticalScrollBarVisibility="Auto"
              Grid.Column="0"
              Grid.Row="1"
              Grid.RowSpan="4"
              Margin="5,54,10,0"
              Panel.ZIndex="1">

            <ScrollViewer.Resources>

                <!-- Спочатку шаблон Thumb -->
                <ControlTemplate x:Key="RoundedThumbTemplate" TargetType="Thumb">
                    <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="4"/>
                </ControlTemplate>

                <!-- Тепер повний стиль ScrollBar -->
                <Style TargetType="ScrollBar">
                    <Setter Property="Width" Value="8"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid Background="#FFFAD0BE" Width="8">
                                    <Track Name="PART_Track" IsDirectionReversed="true">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.LineUpCommand"
                                              Background="Transparent"
                                              IsEnabled="False"
                                              Visibility="Collapsed"/>
                                        </Track.DecreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb Background="#FFA1402F"
                                       BorderBrush="#FFA1402F"
                                       BorderThickness="1"
                                       Height="60"
                                       Template="{StaticResource RoundedThumbTemplate}"/>
                                        </Track.Thumb>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.LineDownCommand"
                                              Background="Transparent"
                                              IsEnabled="False"
                                              Visibility="Collapsed"/>
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </ScrollViewer.Resources>
            <StackPanel>

                <!-- Країна -->
                <Label Content="Країна" Margin="5" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16"/>
                <CheckBox Content="Всі" x:Name="CheckAllcountriesBox" Checked="CheckAllCou_Checked" Unchecked="CheckAllCou_Unchecked" Margin="10 5 5 5"/>
                <StackPanel x:Name="CountryCheckBoxesPanel" Orientation="Vertical" Margin="5,5,0,5"/>

                <!-- Тип туру -->
                <Label Content="Тип туру" Margin="5" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16"/>
                <CheckBox Content="Всі" x:Name="CheckAlltypesBox" Checked="CheckAllTypes_Checked" Unchecked="CheckAllTypes_Unchecked" Margin="10 5 5 5"/>
                <CheckBox Content="Пляжні" x:Name="Type1" Margin="15 5 5 5"/>
                <CheckBox Content="Екскурсійні" x:Name="Type2" Margin="15 5 5 5"/>
                <CheckBox Content="Оздоровчі" x:Name="Type3" Margin="15 5 5 5"/>

                <!-- Ціна -->
                <Label Content="Ціна (грн)" Margin="5, 0, 0, 0" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16"/>
                <StackPanel Orientation="Vertical" Margin="5 0 5 5">
                    <StackPanel Orientation="Vertical" Margin="0, 0, 0, 5">

                        <TextBlock Margin="0, 0, 0, 5" Text="Від:" Height="15" Width="90" Foreground="#FF63291B" />
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="MinPriceBox" Height="30" Width="115" FontSize="16" Background="#FFFFE4DE" FontFamily="Sitka Display" SelectionBrush="#FFFCAF9E">
                                <TextBox.BorderBrush>
                                    <SolidColorBrush Color="Transparent"/>
                                </TextBox.BorderBrush>
                                <TextBox.Foreground>
                                    <SolidColorBrush Color="#FF63291B"/>
                                </TextBox.Foreground>
                            </TextBox>
                            <Button 
                            Style="{StaticResource buttonmenu}"
                            x:Name="cross1"
                            Click="deletemin_Click"
                            Height="19" Width="19" Margin="5,5,0,0"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            ToolTip="Очистити">
                                <Button.Background>
                                    <ImageBrush ImageSource="/cross.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="До:" Margin="0" Height="15" Width="91" Foreground="#FF63291B" />

                        <!-- Горизонтальний ряд: TextBox + хрестик -->
                        <StackPanel Orientation="Horizontal" Margin="0, 5, 0, 0">
                            <TextBox x:Name="MaxPriceBox" Height="30" Width="115" FontSize="16" Background="#FFFFE4DE" FontFamily="Sitka Display" SelectionBrush="#FFFCAF9E">
                                <TextBox.BorderBrush>
                                    <SolidColorBrush Color="Transparent"/>
                                </TextBox.BorderBrush>
                                <TextBox.Foreground>
                                    <SolidColorBrush Color="#FF63291B"/>
                                </TextBox.Foreground>
                            </TextBox>

                            <Button 
                            Style="{StaticResource buttonmenu}"
                            x:Name="cross2"
                            Click="deletemax_Click"
                            Height="19" Width="19" Margin="5,5,0,0"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            ToolTip="Очистити">
                                <Button.Background>
                                    <ImageBrush ImageSource="/cross.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Дата -->
                <Label Content="Дата" Margin="5" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16"/>
                <StackPanel Orientation="Vertical" Margin="5 0 5 5" Width="137">
                    <StackPanel Orientation="Vertical" Margin="0,0,0,5">
                        <TextBlock Text="З:" Margin="0,0,0,2" Height="15" Width="110" Foreground="#FF63291B" />
                        <DatePicker x:Name="mindate"  SelectedDate="2025-01-01" Grid.Column="1" HorizontalAlignment="Left"
                        Grid.Row="4" VerticalAlignment="Center"
                        Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="14"
                        Background="Transparent">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Background" Value="#FFFFE4DE"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Foreground" Value="#FF63291B"/>
                                    <Setter Property="Text" Value=" "/>
                                </Style>
                            </DatePicker.Resources>
                            <DatePicker.BorderBrush>
                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                    <GradientStop Offset="1"/>
                                    <GradientStop/>
                                </LinearGradientBrush>
                            </DatePicker.BorderBrush>
                        </DatePicker>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="По:" Margin="0,0,0,2" Height="15" Width="110"  Foreground="#FF63291B" />
                        <DatePicker x:Name="maxdate" SelectedDate="2030-12-31" Grid.Column="1" HorizontalAlignment="Left"
                        Grid.Row="4" VerticalAlignment="Center"
                        Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="14"
                        Background="Transparent">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Background" Value="#FFFFE4DE"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Foreground" Value="#FF63291B"/>
                                    <Setter Property="Text" Value=" "/>
                                </Style>
                            </DatePicker.Resources>
                            <DatePicker.BorderBrush>
                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                    <GradientStop Offset="1"/>
                                    <GradientStop/>
                                </LinearGradientBrush>
                            </DatePicker.BorderBrush>
                        </DatePicker>
                    </StackPanel>
                </StackPanel>
                <Button Style="{StaticResource darkbutton}"
                Content="ОК" x:Name="Okbtn"
                HorizontalAlignment="Center"
                Grid.Row="1"
                VerticalAlignment="Top"
                Width="80"
                Height="32"
                FontSize="18"
                FontFamily="Sitka Display"
                Background="#FF63291B"
                Foreground="#FFFAD0BE" Margin="0,15,0,20"  BorderBrush="Transparent" Click="Okbtn_Click"/>
            </StackPanel>
        </ScrollViewer>
        <Frame Name="MainFrame" Grid.Column="0" Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="3" Margin="0,54,0,0">
            <Frame.Background>
                <SolidColorBrush/>
            </Frame.Background>
        </Frame>
        <Label Content="Фільтри" HorizontalAlignment="Center" Margin="0,28,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="#FF47334A" FontFamily="Sitka Display" FontSize="18" FontWeight="Bold" FontStyle="Italic" Grid.RowSpan="2"/>
    </Grid>
</Window>
