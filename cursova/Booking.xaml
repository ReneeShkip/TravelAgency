<Window x:Class="cursova.Booking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cursova"
        mc:Ignorable="d" Icon="/resources/main.ico" 
        Title="Бронювання" Height="600" Width="570">
    <Grid Background="#FFFAD0BE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="76*"/>
        </Grid.RowDefinitions>
        <Rectangle HorizontalAlignment="Left" Height="90" VerticalAlignment="Center" Width="570" Fill="#FFA1402F" Grid.ColumnSpan="2" Grid.Column="0"/>
        <Label Content="Бронювання" HorizontalAlignment="Left" Margin="48,0,0,0" VerticalAlignment="Center" FontFamily="Sitka Small Semibold" FontSize="24" Foreground="#FFF8DEA6" Height="38" Width="188" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1"/>
        <Label Style="{StaticResource InfoLabel}" Content="Тур: " HorizontalAlignment="Left" VerticalAlignment="Top" Height="42" Width="132" Margin="10,23,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1"/>
        <Label Style="{StaticResource InfoLabel}" Content="Турист: " HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="132" Height="42" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10,0,0,0"/>
        <Label Style="{StaticResource InfoLabel}" Content="Співробітник: " HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Width="132" Margin="10,0,0,0" Height="39" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="VoucherTxt" Grid.Column="1" HorizontalAlignment="Left" Margin="36,29,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="308" Background="#FFFFE4DE" Height="29" FontFamily="Sitka Display" FontSize="18">
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF63291B"/>
            </TextBox.Foreground>
            <TextBox.BorderBrush>
                <SolidColorBrush Color="Transparent"/>
            </TextBox.BorderBrush>
        </TextBox>
        <ComboBox x:Name="TouristComboBox"
          Grid.Column="1"
          HorizontalAlignment="Left"
          Margin="42,0,0,0"
          Grid.Row="2"
          VerticalAlignment="Center"
          Width="276"
          Height="29"
          Background="#FFFFE4DE"
          BorderBrush="Transparent"
          Foreground="#FF63291B"
          Opacity="0.75"
          FontFamily="Sitka Display"
          FontSize="18"/>

        <ComboBox x:Name="EmployeeComboBox"
          Grid.Column="1"
          HorizontalAlignment="Left"
          Margin="42,7,0,0"
          Grid.Row="3"
          VerticalAlignment="Top"
          Width="276"
          Height="29"
          Background="#FFFFE4DE"
          BorderBrush="Transparent"
          Foreground="#FF63291B"
          Opacity="0.75"
          FontFamily="Sitka Display"
          FontSize="18"/>
        <TextBox x:Name="PeopleCountTxt" Grid.Column="1" HorizontalAlignment="Left" Margin="36,0,0,0" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="138" Background="#FFFFE4DE" Height="29" BorderBrush="Transparent" FontFamily="Sitka Display" FontSize="18">
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF63291B"/>
            </TextBox.Foreground>
        </TextBox>
        <Button Style="{StaticResource darkbutton}"
            Grid.Column="1"
                x:Name="okbtn"
            Content="Ok"
            HorizontalAlignment="Left"
            Grid.Row="8"
            VerticalAlignment="Center"
            Width="92"
            Height="28"
            FontSize="18"
            FontFamily="Sitka Display"
            Background="#FF63291B"
            Foreground="#FFFAD0BE"
            Margin="284,0,0,0" Click="okbtn_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Label Style="{StaticResource InfoLabel}" Content="К-сть осіб: " HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Width="132" Margin="10,1,0,0" Height="46" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Style="{StaticResource InfoLabel}" Content="Поточна дата: " HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Center" Width="132" Margin="10,0,0,0" Height="38" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Style="{StaticResource InfoLabel}" Content="Знижка: " HorizontalAlignment="Left" Grid.Row="7" Width="132" Margin="10,7,0,6" Height="NaN" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <DatePicker x:Name="NowDatePicker" SelectedDate="05/20/2025" Grid.Column="1" HorizontalAlignment="Left" Margin="36,0,0,0"
            Grid.Row="5" VerticalAlignment="Center"
            Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="18"
            Background="Transparent" Height="30" Width="164">


            <DatePicker.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="Background" Value="#FFFFE4DE"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Foreground" Value="#FF63291B"/>
                    <Setter Property="Text" Value="                "/>
                </Style>
            </DatePicker.Resources>
            <DatePicker.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Offset="1"/>
                    <GradientStop/>
                </LinearGradientBrush>
            </DatePicker.BorderBrush>
        </DatePicker>
        <Label Style="{StaticResource InfoLabel}" Content="Уточнення: " HorizontalAlignment="Left" Grid.Row="6" VerticalAlignment="Center" Width="132" Margin="10,0,0,0" Height="38" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="childrenbox" Style="{StaticResource checkbook}" Grid.Column="1" Content="Є діти" HorizontalAlignment="Left" Margin="42,0,0,0" Grid.Row="6" VerticalAlignment="Center" FontSize="18" Height="22" Width="68"/>
        <CheckBox x:Name="oldbox" Style="{StaticResource checkbook}" Grid.Column="1" Content="Є люди похилого віку" HorizontalAlignment="Left" Margin="180,0,0,0" Grid.Row="6" VerticalAlignment="Center" FontSize="18" Height="22" Width="186"/>
        <TextBlock x:Name="DiscountText" Grid.Column="1" HorizontalAlignment="Left" Margin="26,0,0,0" Grid.Row="7" TextWrapping="Wrap" Text="Нема" VerticalAlignment="Center" Height="23" Width="Auto" FontSize="18" FontFamily="Sitka Display" Foreground="#FF63291B"/>
        <Button Style="{StaticResource darkbutton}"
            Grid.Column="1"
            x:Name="calcbtn"
            Content="Розрахувати"
            HorizontalAlignment="Left"
            Grid.Row="8"
            VerticalAlignment="Center"
            Width="92"
            Height="28"
            FontSize="18"
            FontFamily="Sitka Display"
            Background="#FF63291B"
            Foreground="#FFFAD0BE"
            Margin="10,0,0,0" Click="calcbtn_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <TextBlock x:Name="PercTxt" Grid.Column="1" HorizontalAlignment="Left" Margin="142,0,0,0" Grid.Row="7" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="23" Width="Auto" FontSize="18" FontFamily="Sitka Display" Foreground="#FF63291B"/>
    </Grid>
</Window>
