<Window x:Class="cursova.autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cursova"
        mc:Ignorable="d" Icon="/resources/main.ico" 
        Title="Вхід" Height="290" Width="330" ResizeMode="NoResize">
    <Grid Background="#FFFAD0BE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="220*"/>
            <ColumnDefinition Width="29*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Content="Вхід" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="38" Foreground="#FF63291B" FontFamily="Sitka Heading Semibold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="52"/>
        <Label Grid.Column="1" Content="Логін" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" FontFamily="Sitka Display" FontSize="18" Foreground="#FF63291B" FontWeight="Bold"/>
        <TextBox x:Name="Login" Grid.Column="1" HorizontalAlignment="Left" Margin="67,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="   " VerticalAlignment="Center" Width="185" Background="#FFFFE4DE" Height="32" AutomationProperties.IsColumnHeader="True" FontFamily="Sitka Display" FontSize="18">
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF63291B"/>
            </TextBox.Foreground>
            <TextBox.BorderBrush>
                <SolidColorBrush Color="Transparent"/>
            </TextBox.BorderBrush>
        </TextBox>

        <Label Content="Пароль" HorizontalAlignment="Left" Margin="29,0,0,0" Grid.Row="4" VerticalAlignment="Center" FontFamily="Sitka Display" FontSize="18" Foreground="#FF63291B" Grid.ColumnSpan="2" FontWeight="Bold"/>
        <Button Style="{StaticResource darkbutton}"
        Grid.Column="1"
        Content="ОК"
        HorizontalAlignment="Center"
        Grid.Row="5"
        VerticalAlignment="Center"
        Width="92"
        Height="26"        
        FontFamily="Sitka Display"
        Background="#FF63291B"
        Foreground="#FFFAD0BE"
        Click="Button_Click" FontSize="18">
            <Button.BorderBrush>
                <SolidColorBrush Color="Transparent"/>
            </Button.BorderBrush>
        </Button>
        <PasswordBox x:Name="Password" Password="" Grid.Column="1" HorizontalAlignment="Left" Margin="67,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="185" FontFamily="Sitka Display" Background="#FFFFE4DE" Foreground="#FF63291B" Height="33" FontSize="24">
            <PasswordBox.BorderBrush>
                <SolidColorBrush Color="Transparent"/>
            </PasswordBox.BorderBrush>
        </PasswordBox>
    </Grid>
</Window>
