<Window x:Class="cursova.vaucher_info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cursova"
        mc:Ignorable="d" Icon="/resources/main.ico" 
        Title="Путівка" Height="480" Width="820" ResizeMode="NoResize">
    <Grid Background="#FFFAD0BE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="136*"/>
            <ColumnDefinition Width="273*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="273*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Rectangle HorizontalAlignment="Left" Height="70" VerticalAlignment="Center" Width="820" Fill="#FFA1402F" Grid.ColumnSpan="4" Grid.Column="0"/>
        <Label Content="Інформація про путівку" HorizontalAlignment="Left" Margin="108,10,0,0" VerticalAlignment="Top" FontFamily="Sitka Small Semibold" FontSize="24" Grid.ColumnSpan="3" Foreground="#FFF8DEA6" Height="37" Width="330" Grid.Column="1"/>

        <!-- Ліва частина -->
        <Label Style="{StaticResource InfoLabel}" Content="Назва:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" Width="74"/>
        <Label x:Name="txtName" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Місто:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" Width="74"/>
        <Label x:Name="txtCity" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Країна:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="74" FontWeight="Bold"/>
        <Label x:Name="txtCountry" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Тривалість:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="104" FontWeight="Bold"/>
        <Label x:Name="txtDuration" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Дата початку:" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Width="126" FontWeight="Bold" Margin="8,0,0,0"/>
        <Label x:Name="txtStart" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Дата кінця:" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Width="116" FontWeight="Bold"/>
        <Label x:Name="txtEnd" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Рейтинг:" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="87" FontWeight="Bold"/>
        <Label x:Name="txtRate" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <!-- Права частина -->
        <Label Style="{StaticResource InfoLabel}" Content="Тип туру:" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="98" FontWeight="Bold"/>
        <Label x:Name="txtType" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Готель:" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="83" FontWeight="Bold"/>
        <Label x:Name="txtHotel" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Транспорт:" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="98" FontWeight="Bold"/>
        <Label x:Name="txtTransport" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Місць:" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="66" FontWeight="Bold"/>
        <Label x:Name="txtSeats" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Ціна:" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
        <Label x:Name="txtPrice" Style="{StaticResource InfoLabel}" Width="auto" Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>

        <Label Style="{StaticResource InfoLabel}" Content="Опис:" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
        <Label Style="{StaticResource InfoLabel}" Width="644" Grid.Row="7" Grid.ColumnSpan="4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="136,1,0,0" FontSize="16" Height="131" Grid.RowSpan="3">
            <TextBlock x:Name="txtDescription"
               TextWrapping="Wrap"
               Text=""
               VerticalAlignment="Center"/>
        </Label>


        <Button Style="{StaticResource darkbutton}"
        Grid.Column="3"
        Content="Бронювати"
        HorizontalAlignment="Left"
        Grid.Row="9"
        VerticalAlignment="Center"
        Width="97"
        Height="32"
        FontSize="18"
        FontFamily="Sitka Display"
        Background="#FF63291B"
        Foreground="#FFFAD0BE"
        Margin="115,0,0,0" Click="Button_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
    </Grid>
</Window>
