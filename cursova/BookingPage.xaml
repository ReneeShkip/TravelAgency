<Page x:Class="cursova.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cursova"
      mc:Ignorable="d" 
      d:DesignHeight="395" d:DesignWidth="850"
      Title="BookingPage">

    <Grid Background="#FFFAD0BE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="FilterColumn" Width="3*"/>
            <ColumnDefinition x:Name="SecondColumn" Width="9*"/>
            <ColumnDefinition x:Name="LastColumn" Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="289*"/>
            <RowDefinition Height="54*"/>
        </Grid.RowDefinitions>
        <DataGrid
            x:Name="BookingDataGrid"
            AutoGenerateColumns="False"
            HeadersVisibility="Column"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            Background="#FFEEAFA0"
            Foreground="#FF3C3335"
            FontFamily="Sitka Display Semibold"
            FontSize="14"
            RowBackground="#FFFFF5F1"
            AlternatingRowBackground="#FFFFE4DE"
            GridLinesVisibility="Horizontal"
            BorderBrush="{x:Null}" Height="268" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="196,50,65,0" Grid.RowSpan="2">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FFDD8C7A"/>
                    <Setter Property="Foreground" Value="#FF3C3335"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FFCC5C52"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FF3C3335"/>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Тур" Binding="{Binding VoucherName}" Width="auto"/>
                <DataGridTextColumn Header="Турист" Binding="{Binding TouristFullName}"  Width="110"/>
                <DataGridTextColumn Header="Працівник" Binding="{Binding EmployeeFullName}"  Width="90"/>
                <DataGridTextColumn Header="К-сть" Binding="{Binding PeopleCount}"  Width="50" />
                <DataGridTextColumn Header="Знижка" Binding="{Binding DiscountName}"  Width="auto"/>
                <DataGridTextColumn Header="Сума" Binding="{Binding Amount}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Style="{StaticResource darkbutton}"
         Content="Редагувати" x:Name="infobtn_Copy1"
         HorizontalAlignment="Left"
         Grid.Row="2"
         VerticalAlignment="Top"
         Width="109"
         Height="32"
         FontSize="18"
         FontFamily="Sitka Display"
         Background="#FF63291B"
         Foreground="#FFFAD0BE" Margin="457,12,0,0" BorderBrush="Transparent" Grid.Column="1" Click="infobtn_Copy1_Click"/>

        <TextBox x:Name="findbox" Grid.Column="1" HorizontalAlignment="Left" Margin="243,0,0,0" Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="  |  Пошук за назвою ..." VerticalAlignment="Center" Width="300" FontSize="16" Background="#FFFFE4DE" FontFamily="Sitka Display" SelectionBrush="#FFFCAF9E" Height="30" >
            <TextBox.BorderBrush>
                <SolidColorBrush Color="#FFABADB3" Opacity="0"/>
            </TextBox.BorderBrush>
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF63291B" Opacity="0.75"/>
            </TextBox.Foreground>
        </TextBox>
        <Button 
Style="{StaticResource buttonmenu}"
x:Name="finder" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Click="finderinbox_Click" Height="19" RenderTransformOrigin="0.5,0.5" Width="19" Grid.ColumnSpan="2" Margin="550,0,0,0">
            <Button.Background>
                <ImageBrush ImageSource="/finder.png"/>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180.703"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <Button 
        Style="{StaticResource buttonmenu}"
        x:Name="cross" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Click="deletetext_Click" Height="19" RenderTransformOrigin="0.5,0.5" Width="19" Grid.ColumnSpan="2" Margin="584,0,0,0">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/cross.png"/>
            </Button.Background>
        </Button>

        <ScrollViewer x:Name="FilterCheckboxes"
      VerticalScrollBarVisibility="Auto"
      Grid.Column="0"
      Grid.RowSpan="3"
      Margin="5,1,10,0"
      Panel.ZIndex="1">
            <ScrollViewer.Resources>

                <!-- Спочатку шаблон Thumb -->
                <ControlTemplate x:Key="RoundedThumbTemplate" TargetType="Thumb">
                    <Border Background="{TemplateBinding Background}"
     BorderBrush="{TemplateBinding BorderBrush}"
     BorderThickness="{TemplateBinding BorderThickness}"
     CornerRadius="4"/>
                </ControlTemplate>

                <!-- Тепер повний стиль ScrollBar -->
                <Style TargetType="ScrollBar">
                    <Setter Property="Width" Value="8"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid Background="#FFFAD0BE" Width="8">
                                    <Track Name="PART_Track" IsDirectionReversed="true">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.LineUpCommand"
                                   Background="Transparent"
                                   IsEnabled="False"
                                   Visibility="Collapsed"/>
                                        </Track.DecreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb Background="#FFA1402F"
                            BorderBrush="#FFA1402F"
                            BorderThickness="1"
                            Height="60"
                            Template="{StaticResource RoundedThumbTemplate}"/>
                                        </Track.Thumb>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.LineDownCommand"
                                   Background="Transparent"
                                   IsEnabled="False"
                                   Visibility="Collapsed"/>
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </ScrollViewer.Resources>
            <StackPanel Grid.RowSpan="3">
                <!-- Працівники -->
                <Label Content="Працівники" Margin="5" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16"/>
                <CheckBox Content="Всі" x:Name="CheckAll" Checked="CheckAll_Checked" Unchecked="CheckAll_Unchecked" Margin="15 0 5 5"/>
                <CheckBox Content="Адміністратор" x:Name="Admin" Margin="25 5 5 5" IsEnabled="True" Unchecked="Option_Unchecked" Checked="Option_Checked"/>
                <CheckBox Content="Співробітник" x:Name="Employee" Margin="25 5 5 5" IsEnabled="True" Unchecked="Option_Unchecked" Checked="Option_Checked"/>
                <CheckBox Content="Директор" x:Name="Headmaster" Margin="25 5 5 5" IsEnabled="True" Unchecked="Option_Unchecked" Checked="Option_Checked"/>


                <!-- Знижка -->
                <Label Content="Знижки" Margin="5" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16"/>
                <CheckBox Content="Є" x:Name="Alldisc" Margin="25 0 5 5"/>
                <CheckBox Content="Нема" x:Name="Nulldisc" Margin="25 5 5 5"/>

                <Label Content="Дата путівки" Margin="5,5,5,0" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16"/>
                <Label Content="Від" Margin="20,0,5,0" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="14"/>
                <DatePicker x:Name="datefilter" Margin="15 0 5 5" SelectedDate="2025-01-01" Grid.Column="1" HorizontalAlignment="Left"
                        Grid.Row="4" VerticalAlignment="Center"
                        Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="14"
                        Background="Transparent">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Background" Value="#FFFFE4DE"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="#FF63291B"/>
                            <Setter Property="Text" Value=" "/>
                        </Style>
                    </DatePicker.Resources>
                    <DatePicker.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Offset="1"/>
                            <GradientStop/>
                        </LinearGradientBrush>
                    </DatePicker.BorderBrush>
                </DatePicker>
                <Label Content="До:" Margin="20,0,5,0" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="14"/>
                <DatePicker x:Name="datefiltermax" Margin="15 0 5 5" SelectedDate="2025-12-31" Grid.Column="1" HorizontalAlignment="Left"
                    Grid.Row="4" VerticalAlignment="Center"
                    Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="14"
                    Background="Transparent">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Background" Value="#FFFFE4DE"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="#FF63291B"/>
                            <Setter Property="Text" Value=" "/>
                        </Style>
                    </DatePicker.Resources>
                    <DatePicker.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Offset="1"/>
                            <GradientStop/>
                        </LinearGradientBrush>
                    </DatePicker.BorderBrush>
                </DatePicker>
                <Button Style="{StaticResource darkbutton}"
            Content="ОК" x:Name="Okbtn"
            HorizontalAlignment="Center"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="80"
            Height="32"
            FontSize="18"
            FontFamily="Sitka Display"
            Background="#FF63291B"
            Foreground="#FFFAD0BE" Margin="0,15,0,20" BorderBrush="Transparent" Click="Okbtn_Click"/>
            </StackPanel>
        </ScrollViewer>
        <Label Content="Загальна сума бронювань:" Margin="0,0,0,0" Foreground="#FF63291B" FontFamily="Sitka Display" FontSize="16" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="Amountr" Grid.Column="1" Foreground="#FF63291B" FontFamily="Sitka Display" HorizontalAlignment="Left" Margin="200,5,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
</Page>
